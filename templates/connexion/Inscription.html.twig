<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="{{ asset('css/Inscription.css') }}" rel="stylesheet">
</head>
<body>
    <div id="container" class="container">
        <!-- FORM SECTION -->
        <div class="row">
            <!-- SIGN UP -->
            <div class="col align-items-center flex-col sign-up">
                <div class="form-wrapper align-items-center">
                    <div class="form sign-up">
                        <form method="post" action="{{ path('user_register') }}" enctype="multipart/form-data">
                            {{ form_start(form) }}
                                <div class="input-group">
                                    <i class="bi bi-person"></i>
                                    {{ form_widget(form.username, { 'attr': {'placeholder': 'Username 1'} }) }}
                                </div>
                                <div class="input-group">
                                    <i class="bi bi-envelope"></i>
                                    {{ form_widget(form.email, { 'attr': {'placeholder': 'Email44'} }) }}
                                </div>
                                <div class="input-group">
                                    <i class="bi bi-lock"></i>
                                    {{ form_widget(form.password, { 'attr': {'placeholder': 'Password'} }) }}
                                </div>
                                <div class="input-group">
                                    <i class="bi bi-lock"></i>
                                    {{ form_widget(form.confirm_password, { 'attr': {'placeholder': 'Confirm Password'} }) }}
									
                                </div>
                                <button type="submit">
                                    Sign up
                                </button>
                            {{ form_end(form) }}
                        </form>
                        <p>
                            <span>Already have an account?</span>
                            <b onclick="toggle()" class="pointer">Sign in here</b>
                        </p>
                    </div>
                </div>
            </div>
            <!-- END SIGN UP -->

            <!-- SIGN IN -->
            <div class="col align-items-center flex-col sign-in">
                <div class="form-wrapper align-items-center">
                    <div class="form sign-in">
                        <form method="post" action="{{ path('user_login') }}">
                            <div class="input-group">
                                <i class="bi bi-person"></i>
                                <input type="text" placeholder="Username">
                            </div>
                            <div class="input-group">
                                <i class="bi bi-lock"></i>
                                <input type="password" placeholder="Password">
                            </div>
                            <button type="submit">
                                Sign in
                            </button>
                        </form>
                        <p>
                            <span>Don't have an account?</span>
                            <b onclick="toggle()" class="pointer">Sign up here</b>
                        </p>
                    </div>
                </div>
            </div>
            <!-- END SIGN IN -->
        </div>
        <!-- END FORM SECTION -->

        <!-- CONTENT SECTION -->
        <div class="row content-row">
            <!-- SIGN IN CONTENT -->
            <div class="col align-items-center flex-col">
                <div class="text sign-in">
                    <h2>Welcome</h2>
                </div>
                <div class="img sign-in"></div>
            </div>
            <!-- END SIGN IN CONTENT -->

            <!-- SIGN UP CONTENT -->
            <div class="col align-items-center flex-col">
                <div class="img sign-up"></div>
                <div class="text sign-up">
                    <h2>Join with us</h2>
                </div>
            </div>
            <!-- END SIGN UP CONTENT -->
        </div>
        <!-- END CONTENT SECTION -->
    </div>

    <script src="{{ asset('js/inscription.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
