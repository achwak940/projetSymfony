{% include 'dashboard/interface.html.twig' %}
        <!-- Page Content -->
        <div class="page-content w-100">
            <!-- Topbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4 py-2">
                <div class="container-fluid">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-bars me-3 text-success"></i>
                        <h4 class="mb-0 text-success"> Modifier le produit</h4>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Informations du produit</h5>
                            </div>
                            <div class="card-body">
                                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du produit'}}) }}
                                                {{ form_label(form.name) }}
                                                {{ form_errors(form.name) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix', 'step': '0.01'}}) }}
                                                {{ form_label(form.prix) }}
                                                {{ form_errors(form.prix) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Stock'}}) }}
                                                {{ form_label(form.stock) }}
                                                {{ form_errors(form.stock) }}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3">
                                                {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                                                {{ form_label(form.categorie) }}
                                                {{ form_errors(form.categorie) }}
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating mb-3">
                                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'height: 100px', 'placeholder': 'Description'}}) }}
                                                {{ form_label(form.description) }}
                                                {{ form_errors(form.description) }}
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="mb-3">
                                                {{ form_label(form.images) }}
                                                {{ form_widget(form.images, {'attr': {'class': 'form-control'}}) }}
                                               {{ form_errors(form.images) }}
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="d-flex justify-content-between">
                                                <a href="{{ path('admin') }}" class="btn btn-outline-success">
                                                    <i class="fas fa-arrow-left me-2"></i>Retour
                                                </a>
                                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Flash Messages - SweetAlert2 -->
    {% for message in app.flashes('success') %}
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Succès',
                text: '{{ message }}',
                confirmButtonText: 'OK',
                confirmButtonColor: '#198754'
            });
        </script>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Erreur',
                text: '{{ message }}',
                confirmButtonText: 'OK',
                confirmButtonColor: '#dc3545'
            }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '{{ path("admin") }}';  // Redirige après confirmation
            }
        });
        </script>
    {% endfor %}*
</body>
</html>
