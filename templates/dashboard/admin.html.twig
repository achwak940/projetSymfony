<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard E-commerce</title>
  <link href="css/admin.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-success text-white p-3 sidebar">
      <div class="d-flex align-items-center mb-4">
        <i class="fas fa-store fa-2x me-2"></i>
        <h3 class="mb-0">E-commerce Admin</h3>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link text-white active" href="#">
            <i class="fas fa-home me-2"></i>Tableau de bord
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">
            <i class="fas fa-box me-2"></i>Produits
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">
            <i class="fas fa-users me-2"></i>Clients
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">
            <i class="fas fa-shopping-cart me-2"></i>Commandes
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white" href="#">
            <i class="fas fa-chart-bar me-2"></i>Rapports
          </a>
        </li>
      </ul>
    </div>

    <!-- Page Content -->
    <div class="page-content w-100">
      <!-- Topbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4 py-2">
        <div class="container-fluid">
          <div class="d-flex align-items-center">
            <i class="fas fa-bars me-3 text-success"></i>
            <input class="form-control me-2" type="search" placeholder="Rechercher..." style="max-width: 300px;">
          </div>
          <div class="dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-user-circle fa-lg text-success"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profil</a></li>
              <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Paramètres</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Déconnexion</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="container-fluid mt-4">
        <!-- Stat Cards -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card bg-success text-white stat-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="mb-0">Total Produits</h6>
                    <h2 class="mt-2 mb-0">{{nbr_produit}}</h2>
                  </div>
                  <i class="fas fa-box fa-2x opacity-50"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-success text-white stat-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="mb-0">Total Clients</h6>
                    <h2 class="mt-2 mb-0">{{nbr_user}}</h2>
                  </div>
                  <i class="fas fa-users fa-2x opacity-50"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-success text-white stat-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h6 class="mb-0">Commandes du jour</h6>
                    <h2 class="mt-2 mb-0">{{nbr_cmd}}</h2>
                  </div>
                  <i class="fas fa-shopping-cart fa-2x opacity-50"></i>
                </div>
              </div>
            </div>
          </div>

        <!-- Produits récents -->
        
        <div class="row mb-4">
          <div class="col-12">
            <div class="card shadow">
              <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Produits récents</h5>
                <a href="{{ path('ajouter') }}"><button class="btn btn-success" >
                  <i class="fas fa-plus me-2"></i>Ajouter un produit
                </button></a>
              </div>
              {% for produit in produits %}
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3 mb-4">
                    <div class="card product-card">
                    {% for image in images %}
						  {% if image.getproduct().id==produit.id %}
                         <img src="{{image.name}}" class="card-img-top product-image" alt="Produit">
                     {% endif %}
						{% endfor %}
                      <div class="card-body">
                        <h5 class="card-title">Nom:{{produit.name}}</h5>
                        <p class="card-text">Prix:{{produit.prix}}DT</p>
                        <p class="card-text">Stock:{{produit.stock}}</p>
                        <div class="d-flex justify-content-between">
                          <button class="btn btn-sm btn-success">
                            <i class="fas fa-edit"></i>
                          </button>
                          <form method="post" action="{{ path('delete', { id: produit.id }) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                               <input type="hidden" name="_method" value="DELETE">
                              <button type="submit" class="btn btn-sm btn-danger">
                          <i class="fas fa-trash"></i>
                                 </button>
</form>

                        
                        </div>
                      </div>
                    </div>
                  </div>
                    {% endfor %}
                  <!-- Répéter pour d'autres produits -->
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Commandes récentes -->
        <div class="row">
          <div class="col-12">
            <div class="card shadow">
              <div class="card-header bg-white">
                <h5 class="mb-0">Commandes récentes</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead class="table-light">
                      <tr>
                        <th>ID Commande</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Statut</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td>#12345</td>
                        <td>Jean Dupont</td>
                        <td>2023-06-15</td>
                        <td>199.99€</td>
                        <td><span class="order-status status-pending">En attente</span></td>
                        <td>
                          <button class="btn btn-sm btn-success me-1">
                            <i class="fas fa-eye"></i>
                          </button>
                          <button class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td>#12346</td>
                        <td>Marie Martin</td>
                        <td>2023-06-15</td>
                        <td>149.99€</td>
                        <td><span class="order-status status-processing">En cours</span></td>
                        <td>
                          <button class="btn btn-sm btn-success me-1">
                            <i class="fas fa-eye"></i>
                          </button>
                          <button class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                          </button>
                        </td>
                      </tr>
                      <tr>
                        <td>#12347</td>
                        <td>Pierre Durand</td>
                        <td>2023-06-14</td>
                        <td>299.99€</td>
                        <td><span class="order-status status-completed">Terminée</span></td>
                        <td>
                          <button class="btn btn-sm btn-success me-1">
                            <i class="fas fa-eye"></i>
                          </button>
                          <button class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                          </button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 {% for message in app.flashes('success') %}
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Succès',
                text: '{{ message }}',
                confirmButtonText: 'OK',
                confirmButtonColor: '#198754'
            });
        </script>
    {% endfor %}
  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
