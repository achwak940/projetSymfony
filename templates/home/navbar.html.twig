                </li>
                <li>
                    <a class="nav-link" href="{{ path('produit.index') }}">Shop</a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path('about') }}">About us</a>
                </li>
                <li>
                    <a class="nav-link" href="{{ path('contact') }}">Contact us</a>
                </li>

                {% if app.user %}
